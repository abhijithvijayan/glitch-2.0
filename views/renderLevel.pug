extends layout

include mixins/_gameHeader

block header
    +gameHeader(user)

block content
    .container.form__holder
        form.primary__form.py-3(action="/resume" method="POST")
            div
                h2 Resume Levels
            div.py-5
                label.primary__form--label.py-1_5.text-center(for="newFinalLevel") new final level
                input.primary__form--input.text-center#newFinalLevel(name="newFinalLevel" type="text" spellcheck="false" autocomplete="off" required autofocus maxlength="2")                
            button.primary__form--btn.mt-30(type="submit") Resume Game