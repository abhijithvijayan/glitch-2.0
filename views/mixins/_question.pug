mixin question(renderLevel, user)
    - const level = user.level
    .container.form__holder
        if (renderLevel == 0)
            p Game not yet started! Please come back later.
        else if (level <= renderLevel)
            h4.level__header
                span # 
                span #{level}
            case level
                when 1
                    h2 30 years of ....                
                when 2
                    h2 22B Baker Street
                when 3
                    h2 It is coming.
                when 4
                    h2 New Block?
                when 5
                    h2 Most awaited..
                default
                    h2 Hi there, Please come back later.
        else
            p This Stage has Completed. #[br] Other sets of questions will be up soon. #[br] Follow our Facebook Page to know about the next stages.
        if (level <= renderLevel)
            form.primary__form.py-3#ans__submit--form(method="POST")
                div.pb-50
                    input.primary__form--input.text-center#answer(placeholder="answer" name="answer" type="text" spellcheck="false" autocomplete="off" required autofocus maxlength="25")    
                button.primary__form--btn#answer__submit(type="submit") Submit