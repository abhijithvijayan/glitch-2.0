mixin saveSolution(levels)
    form.primary__form.py-3(action=(currentPath.startsWith('/answers') ? '/answers' : '/modify') method="POST")
        .primary__form--selectors
            label.primary__form--label(for="levels__selector") Level
            select.primary__form--menu#levels__selector(name="level")
                if (levels && Array.isArray(levels))
                    for each in levels
                        option(value=each) #{each}      
                else
                    - let n = 1;
                    while n <= levels
                        option(value=n) #{n++}                    
        div
            //- label.primary__form--label(for="answer") Answer
            input.primary__form--input.text-center.pt-50#answer(placeholder="answer" name="answer" type="text" spellcheck="false" autocomplete="off" required autofocus maxlength="25")    
        button.primary__form--btn.mt-30#submit__info(type="submit") Save