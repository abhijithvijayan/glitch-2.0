mixin userInfoForm()
    form.primary__form(action="/account" method="POST")
        div
            label.primary__form--label(for="nickname") Nickname
            input.primary__form--input#nickname(name="nickname" type="text" placeholder="Daenerys" spellcheck="false" autocomplete="off" required autofocus maxlength="18")
        div
            label.primary__form--label(for="number") Mobile Number
            input.primary__form--input#number(name="number" type="text" placeholder="+91-XXX-XXX-XXXX" spellcheck="false" autocomplete="off" required maxlength="17")
        div.pb-50   
            label.primary__form--label(for="collegeName") Name of College
            input.primary__form--input#collegeName(name="collegeName" type="text" placeholder="College of Engineering Adoor" spellcheck="false" autocomplete="off" required maxlength="70")
        button.primary__form--btn(type="submit") Finish Creating Account
