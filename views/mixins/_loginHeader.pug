mixin loginHeader()
    header#header.black__header
        nav.navbar.navbar-expand.container
            a.navbar-brand(href="/play") Glitch 2.0
            button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation")
                span.navbar-toggler-icon
            .collapse.navbar-collapse#navbarNav
                ul.navbar-nav
                    li.nav-item
                        a(href="/top").nav-link Leaderboard
                            != h.icon('medal')                                               
                    li.nav-item
                        a#rules__open--btn.nav-link Rules
                            != h.icon('rules')
                    li.nav-item
                        a(href="https://www.instagram.com/aaroh19").nav-link Clues
                            != h.icon('clues')