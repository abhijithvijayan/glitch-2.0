extends layout

include mixins/_gameHeader

block header
    +gameHeader(user)

block content
    .container.form__holder
        form.primary__form.py-3(action="/options" method="POST")
            div
                h2= title
            div.py-5
                label.primary__form--label.py-1_5(for="levels") number of levels
                input.primary__form--input#levels(name="levels" type="text" spellcheck="false" autocomplete="off" required autofocus maxlength="2")                
            button.primary__form--btn.mt-30(type="submit") Save